;; Basic addition of bigints
(assert! (equal? (+ 9223372036854775808) 9223372036854775808))

(assert! (equal? (+ 9223372036854775808 9223372036854775808) 18446744073709551616))

(assert! (equal? (+ 9223372036854775808 9223372036854775808 9223372036854775808)
                 27670116110564327424))

;; Promotion from int -> bignum, one over int max
(assert! (equal? (+ 1 9223372036854775807) 9223372036854775808))

;; Promotion from int -> bignum, with multiplication
(assert! (equal? (* 2 9223372036854775807) 18446744073709551614))

(assert! (equal? (- -1) 1))
(assert! (equal? (- -9223372036854775808) 9223372036854775808))

